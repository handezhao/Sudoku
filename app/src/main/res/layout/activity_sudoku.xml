<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="0dp">

    <sudo.hdz.com.sudoku.widget.SudokuView
        android:id="@+id/sudoku_view"
        android:layout_width="350dp"
        android:layout_height="600dp"
        android:clickable="true"
        android:focusable="true"
        app:fill_color="@color/fill_color"
        app:inline_color="@color/inline_color"
        app:inline_width="1px"
        app:number_color="@color/black"
        app:number_size="@dimen/number_size"
        app:outline_color="@color/outline_color"
        app:outline_width="2dp" />

</RelativeLayout>
